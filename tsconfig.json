{
  "compilerOptions": {
    "module": "NodeNext",
    "declaration": true,
    "removeComments": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "allowSyntheticDefaultImports": true,
    "allowUnreachableCode": false,
    "target": "ES2021",
    "sourceMap": true,
    "outDir": "./dist",
    "baseUrl": "./",
    "incremental": true,
    "skipLibCheck": true,
    "strictNullChecks": false,
    "noImplicitAny": false,
    "noUnusedLocals": true,
    "strictBindCallApply": false,
    "resolveJsonModule": true,
    "moduleResolution": "nodenext",
    "listEmittedFiles": true,
    "forceConsistentCasingInFileNames": false,
    "noFallthroughCasesInSwitch": true,
    "paths": {
      "@auth/*": ["./src/auth/*"],
      "@char/*": ["./src/char/*"],
      "@database/*": ["./src/database/*"],
      "@file/*": ["./src/file/*"],
      "@globals/*": ["./src/globals/*"],
      "@roles/*": ["./src/roles/*"],
      "@talent/*": ["./src/talent/*"],
      "@user/*": ["./src/user/*"],
      "@relics/*": ["./src/relics/*"],
      "@light-cone/*": ["./src/light-cone/*"]
    }
  }
}
